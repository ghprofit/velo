{
  "compilerOptions": {
    // File Layout
    "outDir": "./dist",

    // Environment Settings - NestJS uses CommonJS
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "types": ["node"],

    // NestJS Decorator Support
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "incremental": true,

    // Module Resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Style Options
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Path Mappings
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts",
    "prisma/**/*",
    "**/examples/**",
    "src/recognition/**/*",
    "src/controllers/auth/*.ts",
    "src/controllers/buyer/*.ts",
    "src/controllers/verification/*.ts",
    "src/controllers/authController.ts",
    "src/controllers/buyerController.ts",
    "src/controllers/verificationController.ts",
    "src/controllers/aController.ts",
    "src/routes/*.ts",
    "src/middleware/auth.ts",
    "src/middleware/validation.ts",
    "src/schemas/*.ts",
    "src/index.ts"
  ]
}
